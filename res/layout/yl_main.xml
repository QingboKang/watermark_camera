<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutEmbed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_portrait"
    android:orientation="vertical" >
     
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
          <Button 
              android:id="@+id/btn_selector_picture"
              android:layout_width="250dip"
              android:layout_height="wrap_content"
              android:text="@string/select_pic"
              android:background="@drawable/bt_mode_background"
              />
          <Button 
              android:id="@+id/btn_selector_Camera"
              android:layout_width="250dip"
              android:layout_height="wrap_content"
              android:text="@string/select_camera"
              android:layout_below="@id/btn_selector_picture"
              android:layout_marginTop="10dip"
               android:background="@drawable/bt_mode_background"
              />        
    </RelativeLayout>

</RelativeLayout>
